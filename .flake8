[flake8]
max-line-length = 88
extend-ignore = E203
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    *.egg,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .coverage,
    htmlcov

# Docstring linting configuration
docstring-convention = google
ignore-decorators = overrides
